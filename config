set $inactive-bg-color   #1f1f1f
set $text-color          #000000
set $inactive-text-color #1f1f1f
set $urgent-bg-color     #696969

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #000000
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #000000
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #000000
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #000000

# screen
exec_always xrandr --dpi 120
# wallpaper
exec_always feh --bg-fill /home/vinz/Downloads/scene.jpg

bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5r # decrease screen brightness

# scroll wheel
bindsym --whole-window $mod+button4 workspace next_on_output
bindsym --whole-window $mod+button5 workspace prev_on_output
bindsym --whole-window --border $mod+shift+button4 resize grow width 5 px or 5 ppt
bindsym --whole-window --border $mod+shift+button5 resize shrink width 5 px or 5 ppt

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 5%-
bindsym XF86AudioMute exec amixer -D pulse sset Master 0%
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
